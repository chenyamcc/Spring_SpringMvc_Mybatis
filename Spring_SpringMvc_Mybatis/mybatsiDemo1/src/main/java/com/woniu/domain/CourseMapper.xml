<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="courseMapper">
<!--    根据id查询课程和选修该课程的学生-->
    <select id="findCourseById" parameterType="int" resultMap="map">
        SELECT *
        FROM student AS st
        JOIN stu_cou AS sc ON st.`s_id` = sc.`s_id`
        JOIN course AS ce ON ce.`c_id` = sc.`c_id`
        where ce.c_id =#{id};
    </select>
    <resultMap id="map" type="Course">
        <id property="id" column="c_id"/>
        <result property="name" column="c_name"/>
        <collection property="students" ofType="StudentBean">
            <id property="id" column="s_id"/>
            <result property="name" column="s_name"/>
            <result property="age" column="s_age"/>
        </collection>
    </resultMap>
</mapper>
