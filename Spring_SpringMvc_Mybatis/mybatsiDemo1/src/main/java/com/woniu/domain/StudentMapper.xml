<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="studentMapper">
    <select id="selectStudentById" parameterType="int" resultMap="map">
        SELECT *
        FROM student AS st
                 JOIN stu_cou AS sc ON st.`s_id` = sc.`s_id`
                 JOIN course AS ce ON ce.`c_id` = sc.`c_id`
                 JOIN class AS cl ON st.`s_c_id` = cl.`c_id`
        WHERE st.`s_id` = #{id};
    </select>
    <resultMap id="map" type="Student">
        <id property="id" column="s_id"/>
        <result property="name" column="s_name"/>
        <result property="age" column="s_age"/>
        <association property="studentClass" javaType="StudentClass">
            <id property="id" column="c_id"/>
            <result property="name" column="c_name"/>
        </association>
        <collection property="courses" ofType="Course">
            <id property="id" column="c_id"/>
            <result property="name" column="c_name"/>
        </collection>
    </resultMap>
</mapper>
