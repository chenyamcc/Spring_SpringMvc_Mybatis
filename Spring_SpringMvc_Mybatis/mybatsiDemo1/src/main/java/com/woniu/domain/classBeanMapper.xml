<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ClaBeanMapper">
    <select id="findClaBeanById" parameterType="int"  resultMap="map">
    select * from student join class c on student.s_c_id = c.c_id where c.c_id=#{c.id}
    </select>

<!--    动态加载教室信息 ,-->
    <select id="findClaBeanByCid" parameterType="int" resultMap="map">
        select * from class where c_id=#{c.id}
    </select>
    <resultMap id="map" type="ClassBean">
        <id property="c_id" column="c_id"/>
        <result property="c_name" column="c_name"/>
        <collection property="list" ofType="StudentBean"
                    select="studentBeanMapper.findStuBeanByScid" column="c_id">
        </collection>
    </resultMap>
</mapper>