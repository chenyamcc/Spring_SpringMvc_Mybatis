<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.woniuxy.dao.IStudentDao">
    <select id="findStudentById" parameterType="int" resultMap="studentMap">
        select stu_id, stu_name, stu_age
        from t_student
        where stu_id = #{id};
    </select>
    <resultMap id="studentMap" type="StudentBean">
        <id property="id" column="stu_id"/>
        <result property="name" column="stu_name"/>
        <result property="age" column="stu_age"/>
    </resultMap>
</mapper>